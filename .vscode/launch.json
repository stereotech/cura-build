    "version": "0.2.0",
    "configurations": [
        {
            "name": "PowerShell Launch Script",
            "type": "PowerShell",
            "request": "launch",
            "script": "powershell.exe -file ${workspaceFolder}/scripts/windows/build.ps1",
            "cwd": "${workspaceFolder}",
            "args": [
                "-CuraVersionMajor 1",
            ]
        },
        {
            "name": "PowerShell: Launch Current File",
            "type": "PowerShell",
            "request": "launch",
            "script": "${file}",
            "cwd": "${file}",
            "args": [
                "-CuraVersionMajor 1",
            ]
        }
    ]
}